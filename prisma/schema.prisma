// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Scheduler {
  id                String      @default(cuid()) @id
  eventTitle        String
  days              DateTime[]
  startTime         DateTime
  endTime           DateTime
  url               String
  availabilities    Availability?
}

model Availability {
  id            String      @default(cuid()) @id
  name          String
  intervals     DateTime[]
  scheduler     Scheduler   @relation(fields: [schedulerId], references: [id])
  schedulerId   String
}
